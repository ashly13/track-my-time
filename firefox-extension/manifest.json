{
  "manifest_version": 2,
  "name": "Track My Time",
  "description": "Track the amount of time spent on websites",
  "version": "0.1",
  "icons": {
    "64": "icons/icon.png"
  },

  "permissions": [
    "webRequest",
    "webNavigation",
    "history",
    "tabs",
    "idle",
    "<all_urls>"
  ],

  "background": {
    "scripts": [
      "background_script.js"
    ]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/icon.png",
    "default_title": "Track My Time"
  },

  "content_security_policy": "script-src 'self' ; object-src 'self';"
}